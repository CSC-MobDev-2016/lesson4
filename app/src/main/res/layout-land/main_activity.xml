<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_gravity="center" android:weightSum="1">
        <EditText
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:id="@+id/editText" android:layout_gravity="center"
                android:text="@string/default_str"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onGoClick"
                android:text="go"
                android:id="@+id/button" android:layout_gravity="center"/>

    </LinearLayout>
</LinearLayout>