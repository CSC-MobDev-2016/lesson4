<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/RSSQueryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/search_button" />

    <EditText
        android:id="@+id/RSSQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/RSSQueryButton"
        android:layout_toLeftOf="@id/RSSQueryButton"
        android:layout_toStartOf="@+id/RSSQueryButton"
        android:inputType="textWebEmailAddress"
        android:singleLine="true"
        android:text="@string/default_rss" />

</RelativeLayout>