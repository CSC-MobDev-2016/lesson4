<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center_vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="1" android:layout_gravity="center_vertical">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:id="@+id/editText"
                android:layout_gravity="center"
                android:text="@string/default_str" android:gravity="center"/>
        <Button
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:onClick="onGoClick"
                android:text="go"
                android:id="@+id/button" android:layout_gravity="center"/>

    </LinearLayout>
</LinearLayout>